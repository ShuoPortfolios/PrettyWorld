@model PrettyWorld.Models.Movie

@{
    ViewData["Title"] = "MovieEdit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>編輯影評</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <form asp-action="MovieEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="main-body">
                <div class="row gutters-sm">
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <img src="@Html.DisplayFor(model => model.MoviePicture)" alt="MoviePicrture" class="rounded" width="250">
                                        <input asp-for="MoviePicture" class="form-control" type="file" id="formFile">
                                        <span asp-validation-for="MoviePicture" class="text-danger"></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0">
                                            <label asp-for="MovieName" class="control-label">電影名稱</label>
                                        </h6>
                                        <input asp-for="MovieName" class="form-control" readonly/>
                                        <span asp-validation-for="MovieName" class="text-danger"></span>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="card mt-3">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 col-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-calendar-event" viewBox="0 0 16 16">
                                            <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z" />
                                            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                                        </svg>&nbsp;
                                        <label asp-for="WatchDate" class="control-label">觀看日期</label>
                                    </h6>
                                    @Html.TextBox("WatchDate", Model.WatchDate, "{0:yyyy-MM-dd}", new{ @class="form-control col-sm", type="date" })
                                    <span asp-validation-for="WatchDate" class="text-danger"></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 col-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-film" viewBox="0 0 16 16">
                                            <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6h8V1H4zm8 8H4v6h8V9zM1 1v2h2V1H1zm2 3H1v2h2V4zM1 7v2h2V7H1zm2 3H1v2h2v-2zm-2 3v2h2v-2H1zM15 1h-2v2h2V1zm-2 3v2h2V4h-2zm2 3h-2v2h2V7zm-2 3v2h2v-2h-2zm2 3h-2v2h2v-2z" />
                                        </svg>&nbsp;
                                        <label asp-for="WatchDate" class="control-label">類型</label>
                                    </h6>
                                    <select asp-for="MovieType" asp-items="@(new SelectList(ViewBag.MovieTypeLists,"TypeName","TypeName"))" class="form-control col-sm"></select>
                                    <span asp-validation-for="MovieType" class="text-danger"></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 col-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person-video2" viewBox="0 0 16 16">
                                            <path d="M10 9.05a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                                            <path d="M2 1a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2H2ZM1 3a1 1 0 0 1 1-1h2v2H1V3Zm4 10V2h9a1 1 0 0 1 1 1v9c0 .285-.12.543-.31.725C14.15 11.494 12.822 10 10 10c-3.037 0-4.345 1.73-4.798 3H5Zm-4-2h3v2H2a1 1 0 0 1-1-1v-1Zm3-1H1V8h3v2Zm0-3H1V5h3v2Z" />
                                        </svg>&nbsp;
                                        <label asp-for="Director" class="control-label">導演</label>
                                    </h6>
                                    <input asp-for="Director" class="form-control col-sm" />
                                    <span asp-validation-for="Director" class="text-danger"></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 col-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
                                            <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816zM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275zM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4z" />
                                        </svg>&nbsp;
                                        <label asp-for="TopCast" class="control-label">卡司</label>
                                    </h6>
                                    <input asp-for="TopCast" class="form-control col-sm" />
                                    <span asp-validation-for="TopCast" class="text-danger"></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 col-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-stars" viewBox="0 0 16 16">
                                            <path d="M7.657 6.247c.11-.33.576-.33.686 0l.645 1.937a2.89 2.89 0 0 0 1.829 1.828l1.936.645c.33.11.33.576 0 .686l-1.937.645a2.89 2.89 0 0 0-1.828 1.829l-.645 1.936a.361.361 0 0 1-.686 0l-.645-1.937a2.89 2.89 0 0 0-1.828-1.828l-1.937-.645a.361.361 0 0 1 0-.686l1.937-.645a2.89 2.89 0 0 0 1.828-1.828l.645-1.937zM3.794 1.148a.217.217 0 0 1 .412 0l.387 1.162c.173.518.579.924 1.097 1.097l1.162.387a.217.217 0 0 1 0 .412l-1.162.387A1.734 1.734 0 0 0 4.593 5.69l-.387 1.162a.217.217 0 0 1-.412 0L3.407 5.69A1.734 1.734 0 0 0 2.31 4.593l-1.162-.387a.217.217 0 0 1 0-.412l1.162-.387A1.734 1.734 0 0 0 3.407 2.31l.387-1.162zM10.863.099a.145.145 0 0 1 .274 0l.258.774c.115.346.386.617.732.732l.774.258a.145.145 0 0 1 0 .274l-.774.258a1.156 1.156 0 0 0-.732.732l-.258.774a.145.145 0 0 1-.274 0l-.258-.774a1.156 1.156 0 0 0-.732-.732L9.1 2.137a.145.145 0 0 1 0-.274l.774-.258c.346-.115.617-.386.732-.732L10.863.1z" />
                                        </svg>&nbsp;
                                        <label asp-for="Rating" class="control-label">評價</label>
                                    </h6>
                                    <input type="number" min="0" max="10" asp-for="Rating" class="form-control col-sm" />
                                    <span asp-validation-for="Rating" class="text-danger"></span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row justify-content-between">
                                    <div class="embed-responsive embed-responsive-16by9">
                                        <iframe class="embed-responsive-item" src="@Html.DisplayFor(model => model.Trailer)" allowfullscreen></iframe>
                                    </div>
                                    <label asp-for="Trailer" class="control-label col-sm">預告片Youtube網址</label>
                                    <input asp-for="Trailer" class="form-control col-sm" /><span class="text-secondary col-sm"></span>
                                    <span asp-validation-for="Trailer" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row gutters-sm">
                            <div class="col-sm-12 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="row">
                                            <label asp-for="Plot" class="control-label col-sm">劇情</label>
                                            <input type="number" min="0" max="100" asp-for="Plot" class="form-control col-sm" /><span class="text-secondary col-sm">/100</span>
                                            <span asp-validation-for="Plot" class="text-danger"></span>
                                        </div>
                                        <div class="row">
                                            <label asp-for="Scene" class="control-label col-sm">畫面</label>
                                            <input type="number" min="0" max="100" asp-for="Scene" class="form-control col-sm" /><span class="text-secondary col-sm">/100</span>
                                            <span asp-validation-for="Scene" class="text-danger"></span>
                                        </div>
                                        <div class="row">
                                            <label asp-for="Sound" class="control-label col-sm">音效</label>
                                            <input type="number" min="0" max="100" asp-for="Sound" class="form-control col-sm" /><span class="text-secondary col-sm">/100</span>
                                            <span asp-validation-for="Sound" class="text-danger"></span>
                                        </div>
                                        <div class="row">
                                            <label asp-for="Immersion" class="control-label col-sm">沉浸感</label>
                                            <input type="number" min="0" max="100" asp-for="Immersion" class="form-control col-sm" /><span class="text-secondary col-sm">/100</span>
                                            <span asp-validation-for="Immersion" class="text-danger"></span>
                                        </div>
                                        <div class="row">
                                            <label asp-for="Acting" class="control-label col-sm">演技</label>
                                            <input type="number" min="0" max="100" asp-for="Acting" class="form-control col-sm" /><span class="text-secondary col-sm">/100</span>
                                            <span asp-validation-for="Acting" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card mb-12">
                            <div class="card">
                                <div class="card-body">
                                    <textarea asp-for="Review" class="form-control" rows="30" placeholder="填寫影評"></textarea>
                                    <span asp-validation-for="Review" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-around">
                <div class="col-2">
                    <a asp-action="MovieList" type="button" class="btn btn-outline-success">回到影評列表</a>
                </div>
                <div class="col-2">
                    <input type="submit" value="確定修改" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>

    <style type="text/css">

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0,0,0,.125);
            border-radius: .25rem;
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

            .gutters-sm > .col, .gutters-sm > [class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

        .mb-3, .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }

    </style>

    <script type="text/javascript">

    </script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }